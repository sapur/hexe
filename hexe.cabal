-- Initial hexe.cabal generated by cabal init.  For further documentation, 
-- see http://haskell.org/cabal/users-guide/

name:                hexe
version:             0.19
synopsis:            A TUI hex editor
author:              Stephan-A. Posselt
maintainer:          dev-hexe@nimbrium.net
copyright:           Stephan-A. Posselt
build-type:          Custom
extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Hexe,
                       Buffer,
                       Command.Data,
                       Command.Execute,
                       Command.Parser,
                       Command.Render,
                       Control,
                       Control.General,
                       Control.HexEditor,
                       Control.LineEditor,
                       Editor,
                       Editor.Data,
                       Editor.Mode,
                       Editor.Render,
                       Editor.Style,
                       Helpers,
                       History,
                       Keymap,
                       Keymap.Data,
                       Keymap.Data.Name,
                       Keymap.Default,
                       Keymap.Render,
                       Options,
                       Render
  other-extensions:    MultiParamTypeClasses, RecordWildCards
  build-depends:       base >=4.9 && <4.10,
                       bytestring >=0.10 && <0.11,
                       fingertree >=0.1 && <0.2,
                       vty >=5.5 && <5.17,
                       optparse-applicative >=0.12 && <0.14,
                       transformers >=0.5 && <0.6,
                       extra >=1.4 && <1.6,
                       mtl >=2.2 && <2.3,
                       containers >=0.5 && <0.6,
                       parsec >= 3.0 && <3.2,
                       directory >= 1.2 && <1.4,
                       filepath >= 1.4 && <1.5,
                       ansi-wl-pprint >= 0.6 && <0.7
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -W -O2

executable hexe
  main-is:             Main.hs
  build-depends:       base >=4.9 && <4.10,
                       hexe
  hs-source-dirs:      app
  default-language:    Haskell2010
  ghc-options:         -W -O2 -threaded

test-suite hexe-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  build-depends:       base >=4.9 && <4.10,
                       hspec >=2.3 && <2.5,
                       QuickCheck >=2.9 && <2.10,
                       hexe
  ghc-options:         -W -O2 -threaded
  default-language:    Haskell2010
